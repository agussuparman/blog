<table>
	<thead>
		<tr>
			<th>Name</th>
			<th colspan="2"></th>
		</tr>
	</thead>
	<% @categories.each do |category| %>
		<thead>
			<tr>
				<td><%= category[1] %></td>
				<td><%= link_to 'Edit', edit_category_path(category[0]) %></td>
				<td><%= link_to 'Delete', category_path(category[0]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		</thead>
	<% end %>
</table>

<%= link_to 'New', new_category_path %>